{
  "publisher": "palmcivet",
  "name": "kiwi-vscode",
  "displayName": "Kiwi VSCode",
  "version": "1.0.3",
  "private": true,
  "description": "Better support for the Kiwi message format in VSCode.",
  "author": "Palm Civet",
  "contributors": [
    {
      "name": "Connor Skees",
      "url": "https://github.com/connorskees"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/palmcivet/kiwi-vscode"
  },
  "main": "./client/out/extension",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "kiwi",
        "aliases": [
          "Kiwi",
          "kiwi"
        ],
        "extensions": [
          ".kiwi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kiwi",
        "scopeName": "source.kiwi",
        "path": "./syntaxes/kiwi.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "postinstall": "cd ./client && npm install && cd ../server && npm install && cd ..",
    "vscode:prepublish": "npm run build",
    "package": "npx vsce package -o ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "rimraf ./{client,server}/out ./dist",
    "test": "npm run test:server && npm run test:client",
    "test:server": "npm run build && mocha ./server/out/test",
    "test:client": "npm run build && node ./client/out/test",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "eslint": "^9.0.0",
    "glob": "^11.0.1",
    "mocha": "^10.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3"
  }
}
