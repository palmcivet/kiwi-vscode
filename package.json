{
  "publisher": "palmcivet",
  "name": "kiwi-vscode",
  "displayName": "Kiwi VSCode",
  "version": "1.0.4",
  "private": true,
  "description": "Better support for the Kiwi message format in VSCode.",
  "author": "Palm Civet",
  "contributors": [
    {
      "name": "Connor Skees",
      "url": "https://github.com/connorskees"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/palmcivet/kiwi-vscode"
  },
  "main": "./client/out/extension",
  "icon": "./assets/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "title": "Kiwi",
      "properties": {
        "kiwi-vscode.enableWarningDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable warning diagnostics."
        },
        "kiwi-vscode.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "(Beta) Enable code formatting."
        }
      }
    },
    "languages": [
      {
        "id": "kiwi",
        "aliases": [
          "Kiwi",
          "kiwi"
        ],
        "extensions": [
          ".kiwi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kiwi",
        "scopeName": "source.kiwi",
        "path": "./syntaxes/kiwi.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "vscode:prepublish": "pnpm build",
    "package": "vsce package --no-dependencies",
    "watch": "pnpm --filter='*' watch",
    "clean": "pnpm --parallel --filter='*' clean",
    "build": "pnpm --parallel --filter='*' build",
    "test": "pnpm --parallel --filter='*' test",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.80",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.22.0",
    "glob": "^11.0.1",
    "mocha": "^10.8.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
