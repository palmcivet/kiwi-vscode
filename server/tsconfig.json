{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@server/*": ["./src/*"]
    },
    "strict": true,
    "outDir": "./out",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", ".vscode-test"]
}
